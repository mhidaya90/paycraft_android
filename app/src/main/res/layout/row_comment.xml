<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp20"
        android:paddingEnd="@dimen/dp20">

        <TextView
            android:id="@+id/commentTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:drawablePadding="@dimen/dp10"
            android:fontFamily="@font/bold"
            android:textColor="@color/black33"
            android:textSize="@dimen/sp14"
            app:drawableStartCompat="@drawable/ic_profile_place_holder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="This will notify the submitter, and will allow him to reply back, in real time." />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp12"
            android:fontFamily="@font/regular"
            android:text="Jeevan.kumar"
            android:textColor="@color/black45"
            android:textSize="@dimen/sp14"
            app:layout_constraintStart_toStartOf="@+id/commentTv"
            app:layout_constraintTop_toBottomOf="@+id/commentTv" />

        <TextView
            android:id="@+id/dividerTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text=" | "
            android:textColor="@color/black45"
            android:textSize="@dimen/sp14"
            app:layout_constraintBottom_toBottomOf="@+id/nameTv"
            app:layout_constraintStart_toEndOf="@+id/nameTv"
            app:layout_constraintTop_toTopOf="@+id/nameTv" />

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="09/10/2018, 03.47 PM"
            android:textColor="@color/black45"
            android:textSize="@dimen/sp14"
            app:layout_constraintBottom_toBottomOf="@+id/nameTv"
            app:layout_constraintStart_toEndOf="@+id/dividerTv"
            app:layout_constraintTop_toTopOf="@+id/nameTv" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/ash1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameTv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>