<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".home.PoliciesActivity">

        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/layout_toolbar" />

        <TextView
            android:id="@+id/grievanceTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_profile_place_holder"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:drawablePadding="@dimen/dp15"
            android:fontFamily="@font/semi_bold"
            android:paddingStart="@dimen/dp20"
            android:paddingTop="@dimen/dp15"
            android:paddingEnd="@dimen/dp20"
            android:paddingBottom="@dimen/dp15"
            android:text="Grievance Policy"
            android:textColor="@color/black33"
            android:textSize="@dimen/sp16" />

        <View
            android:id="@+id/expensesView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="#F1F5F9" />

        <TextView
            android:id="@+id/refundTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_profile_place_holder"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:drawablePadding="@dimen/dp15"
            android:fontFamily="@font/semi_bold"
            android:paddingStart="@dimen/dp20"
            android:paddingTop="@dimen/dp15"
            android:paddingEnd="@dimen/dp20"
            android:paddingBottom="@dimen/dp15"
            android:text="Refund Policy"
            android:textColor="@color/black33"
            android:textSize="@dimen/sp16" />

        <View
            android:id="@+id/advancesView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="#F1F5F9" />

        <TextView
            android:id="@+id/privacyTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_profile_place_holder"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:drawablePadding="@dimen/dp15"
            android:fontFamily="@font/semi_bold"
            android:paddingStart="@dimen/dp20"
            android:paddingTop="@dimen/dp15"
            android:paddingEnd="@dimen/dp20"
            android:paddingBottom="@dimen/dp15"
            android:text="Privacy Policy"
            android:textColor="@color/black33"
            android:textSize="@dimen/sp16" />

        <View
            android:id="@+id/expenseReportsView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="#F1F5F9" />


        <TextView
            android:id="@+id/tAndCsTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_profile_place_holder"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:drawablePadding="@dimen/dp15"
            android:fontFamily="@font/semi_bold"
            android:paddingStart="@dimen/dp20"
            android:paddingTop="@dimen/dp15"
            android:paddingEnd="@dimen/dp20"
            android:paddingBottom="@dimen/dp15"
            android:text="Card Holder Terms and Conditions"
            android:textColor="@color/black33"
            android:textSize="@dimen/sp16" />

        <View
            android:id="@+id/tripsView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="#F1F5F9" />

        <TextView
            android:id="@+id/faqTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_profile_place_holder"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:drawablePadding="@dimen/dp15"
            android:fontFamily="@font/semi_bold"
            android:paddingStart="@dimen/dp20"
            android:paddingTop="@dimen/dp15"
            android:paddingEnd="@dimen/dp20"
            android:paddingBottom="@dimen/dp15"
            android:text="FAQs"
            android:textColor="@color/black33"
            android:textSize="@dimen/sp16" />

        <View
            android:id="@+id/faqView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="#F1F5F9" />

    </LinearLayout>
</layout>