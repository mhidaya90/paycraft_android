<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/attachmentIv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black72" />

    <ImageView
        android:id="@+id/deleteAttachmentIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp30"
        android:background="@drawable/bg_progress_dialog"
        android:scaleType="centerInside"
        android:src="@drawable/baseline_delete_24"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/attachmentIv"
        app:layout_constraintTop_toTopOf="@+id/attachmentIv"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>